extends layout

block stylesheets
  link(rel="stylesheet", href="/stylesheets/home.css")

block content
  form#content(action="/editor", method="get")
    div
      input#session-title(type="text", name="title" maxlength="50" autofocus="true"
        placeholder="#{__('home.sessionTitle.placeholder')}"
      )
      select#session-duration(name="duration")
        option(value="300") 5 minutes
        option(value="600") 10 minutes
        option(value="900") 15 minutes
        option(value="1800") 30 minutes
        option(value="3600") 1 heure
        option(value="7200") 2 heures
    div
      input#session-start(type="submit", value="#{__('home.sessionStart')}")


block javascripts
  script(src="/javascripts/home.js")